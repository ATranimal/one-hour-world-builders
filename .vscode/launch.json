  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}/client"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Client",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start"]
    }
  ]
}
